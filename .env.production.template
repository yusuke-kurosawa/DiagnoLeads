# DiagnoLeads Production Environment Configuration
# Copy this file to .env.production and fill in the actual values

# ==========================================
# Core Application Settings
# ==========================================

# Environment: production, staging, development
ENVIRONMENT=production

# Debug mode (should be False in production)
DEBUG=False

# ==========================================
# Database Configuration
# ==========================================

# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
# Example: postgresql://postgres:SecurePassword123@db.example.com:5432/diagnoleads_prod
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/diagnoleads

# ==========================================
# Redis Configuration
# ==========================================

# Redis connection string for caching and sessions
# Format: redis://:password@host:port/db
# Example: redis://:password@redis.example.com:6379/0
REDIS_URL=redis://:PASSWORD@HOST:6379/0

# ==========================================
# JWT Security
# ==========================================

# Secret key for JWT token signing
# Generate using: python -c "import secrets; print(secrets.token_urlsafe(32))"
# MUST be a strong, random string (minimum 32 characters)
SECRET_KEY=your-secure-random-secret-key-here-minimum-32-characters

# JWT algorithm
ALGORITHM=HS256

# Access token expiration time in minutes (default: 1440 = 24 hours)
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ==========================================
# AI Services (Claude API)
# ==========================================

# Anthropic Claude API Key
# Get from: https://console.anthropic.com/
# Required for AI assessment generation, lead analysis, and content rephrasing
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ==========================================
# CORS Configuration
# ==========================================

# Allowed origins for CORS (comma-separated)
# Format: ["http://localhost:3000", "https://example.com", "https://app.example.com"]
ALLOWED_ORIGINS=["https://app.example.com", "https://diagnoleads.example.com"]

# ==========================================
# External Integrations (Optional)
# ==========================================

# Salesforce Integration
SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=
SALESFORCE_INSTANCE_URL=

# HubSpot Integration
HUBSPOT_API_KEY=

# Slack Integration
SLACK_WEBHOOK_URL=

# SendGrid Email Service
SENDGRID_API_KEY=

# ==========================================
# Monitoring & Observability
# ==========================================

# Sentry Error Tracking
SENTRY_DSN=

# DataDog Monitoring (Optional)
DATADOG_API_KEY=

# ==========================================
# Application URLs
# ==========================================

# Frontend URL for CORS and redirects
FRONTEND_URL=https://diagnoleads.example.com

# Backend API URL
BACKEND_URL=https://api.diagnoleads.example.com

# ==========================================
# Security Headers
# ==========================================

# For HTTPS enforcement (optional, handled by reverse proxy usually)
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# ==========================================
# Deployment Platform Specific
# ==========================================

# For Railway deployment
# No special variables needed - Railway reads from environment automatically

# For Vercel (Frontend)
# VITE_API_URL=https://api.diagnoleads.example.com
# VITE_ENVIRONMENT=production
